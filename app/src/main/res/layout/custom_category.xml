<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/colorBgShortlist"
        android:orientation="vertical"
        android:id="@+id/layout_category"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:layout_height="45dp">

        <com.newtech.jobnow.common.CustomTextViewHelveticaneue
            android:id="@+id/txt_title_category"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="10dp"
            android:text="Project Manager"
            android:textSize="@dimen/sp16"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center_vertical"
            />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:src="@mipmap/ic_next_black"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true" />

        <com.newtech.jobnow.common.CustomTextViewHelveticaneuelight
            android:id="@+id/txt_count_category"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="(5)"
            android:textColor="@color/colorPrimary"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp16"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="3dp"
            android:layout_toRightOf="@+id/txt_title_category"
            android:layout_marginLeft="5dp" />

    </RelativeLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/layout_category"
        android:background="@color/colorLine" />
</RelativeLayout>