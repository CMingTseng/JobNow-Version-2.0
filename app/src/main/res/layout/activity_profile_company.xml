<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/tab_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:id="@+id/imgMenu"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:paddingRight="15dp"
                android:src="@mipmap/ic_back" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btnRemove"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="invisible">

            <com.newtech.jobnow.common.CustomTextViewHelveticaneue
                android:id="@+id/btnSetDone"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Done"
                android:textColor="@color/white"
                android:textSize="@dimen/sp16" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/imgMenu"
            android:layout_toLeftOf="@+id/btnRemove"
            android:layout_toRightOf="@+id/imgMenu"
            android:layout_toStartOf="@+id/btnRemove"
            android:gravity="center"
            android:padding="3dp">

            <com.newtech.jobnow.common.CustomTextViewHelveticaneue
                android:id="@+id/edTitleCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:background="@null"
                android:drawablePadding="5dp"
                android:ellipsize="start"
                android:gravity="center"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1"
                android:padding="3dp"
                android:text="Company Profile"
                android:textColor="@color/white"
                android:textSize="@dimen/sp18" />
            />
        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tab_toolbar"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorLine"

        />


    <LinearLayout
        android:id="@+id/layout_profiles"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:layout_above="@+id/layout_btn"
        android:layout_below="@+id/view2"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@mipmap/banner">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/tvName"
                android:orientation="vertical"
                android:weightSum="2">

            </LinearLayout>

            <com.newtech.jobnow.common.CustomTextViewHelveticaneue
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_avatar"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:drawablePadding="5dp"
                android:text="Gandalf"
                android:textColor="@color/black"
                android:textSize="@dimen/sp18" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_avatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp"
                android:src="@mipmap/default_avatar"
                app:border_color="@color/white"
                app:border_width="2dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size10">

                <com.newtech.jobnow.common.CustomTextViewHelveticaneue
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Industry: "
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp18" />

                <com.newtech.jobnow.common.CustomTextViewHelveticaneuelight
                    android:id="@+id/txt_industry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp16" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size10">

                <com.newtech.jobnow.common.CustomTextViewHelveticaneue
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Company Size: "
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp18" />

                <com.newtech.jobnow.common.CustomTextViewHelveticaneuelight
                    android:id="@+id/txt_company_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp16" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size10">

                <com.newtech.jobnow.common.CustomTextViewHelveticaneue
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email: "
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp18" />

                <com.newtech.jobnow.common.CustomTextViewHelveticaneuelight
                    android:id="@+id/txt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp16" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size10">

                <com.newtech.jobnow.common.CustomTextViewHelveticaneue
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number: "
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp18" />

                <com.newtech.jobnow.common.CustomTextViewHelveticaneuelight
                    android:id="@+id/txt_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp16" />
            </TableRow>

            <com.newtech.jobnow.common.CustomTextViewHelveticaneue
                android:id="@+id/txt_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size10"
                android:text="Description"
                android:textColor="@color/black"
                android:textSize="@dimen/sp18" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">

                <com.newtech.jobnow.common.CustomTextViewHelveticaneuelight
                    android:id="@+id/txt_dis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="@color/colorText" />
            </ScrollView>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

