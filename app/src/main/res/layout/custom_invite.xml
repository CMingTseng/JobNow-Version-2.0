<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:orientation="vertical"
    android:background="@drawable/bg_invite"
    android:padding="10dp"
    android:id="@+id/layout_invite"
    android:layout_marginBottom="10dp">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:layout_marginLeft="5dp">

            <com.newtech.jobnow.common.CustomTextViewHelveticaneue
                android:text="Singapore Company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_title_company_invite"
                android:textStyle="bold"
                android:textSize="@dimen/sp16"
                android:textColor="@color/white"
                />

            <com.newtech.jobnow.common.CustomTextViewHelveticaneuelight
                android:text="singapore@gmail.com"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_email_company"
                android:textSize="@dimen/sp12"
                android:textColor="@color/white"

                />
        </LinearLayout>

        <com.newtech.jobnow.common.CustomTextViewHelveticaneue
            android:text="Invited"
            android:layout_height="match_parent"
            android:id="@+id/txt_status_invite"
            android:layout_gravity="right"
            android:gravity="center"
            android:padding="5dp"
            android:layout_width="70dp"
            android:background="@drawable/bg_btn_invite"
            android:textColor="@color/white"
            android:textStyle="bold"
            />

    </TableRow>
</RelativeLayout>