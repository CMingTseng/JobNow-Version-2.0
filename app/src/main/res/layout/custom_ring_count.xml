<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_toolbar">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_ring"
        android:id="@+id/imgrRing" />

    <com.newtech.jobnow.common.CustomTextViewHelveticaneue
        android:background="@drawable/bg_circle"
        android:gravity="center"
        android:textSize="7sp"
        android:textColor="@color/white"
        android:text="95"
        android:id="@+id/txtCount"
        android:layout_above="@+id/imgrRing"
        android:layout_toRightOf="@+id/imgrRing"
        android:layout_toEndOf="@+id/imgrRing"
        android:layout_height="13dp"
        android:layout_width="13dp"
        android:padding="1dp"
        android:layout_marginLeft="-3dp" />

</RelativeLayout>